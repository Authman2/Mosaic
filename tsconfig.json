{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "build/",
        "typeRoots": ["dist/"],
        "removeComments": true,
        "declaration": true,
        "strict": true,
        "noImplicitAny": false,
        "noImplicitThis": false
    },
    "include": ["src/*"],
    "exclude": ["node_modules"]
}